{
    "manifest_version": 2,
    "name": "Aptixion Extension",
    "version": "1.0",
    "description": "Gets page-level LinkedIn data for your app",
    "permissions": [
      "storage",
      "activeTab",
      "https://www.linkedin.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
        "128": "icon.png"
      },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "externally_connectable": {
        "matches": [
          "http://localhost:3000/*",
          "http://127.0.0.1:3000/*"
        ]
      },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }